@model SadenaFenix.Models.Usuarios.UsuarioAlta

@{
    Layout = "~/Views/Shared/_GeoLayout.cshtml";
    ViewData["Root"] = "Sadena";
    ViewData["Modulo"] = "Administración de usuarios";
    ViewData["Option"] = "Usuarios";
    ViewData["TableName"] = "Crear nuevo usuario";
    ViewData["Title"] = ViewData["Modulo"] + " / " + ViewData["Option"];
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/js/usuarios/crearUsuario.js")"></script>
}    
<!-- Modal large -->
<div id="DialogoModal" class="modal fade in" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p class="modal-text">One fine body…</p>
            </div>
            <div class="modal-footer">
                <button id="largeModalAcceptBtn" type="button" class="btn btn-primary" data-dismiss="modal">Continuar</button>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="page-content">
    <input type="hidden" name="objUsuario" id="objUsuario" value="@ViewBag.UserJson" />

    <!-- Container -->
    <div class="container">

        <!-- Breadcrumb -->
        <section class="pull-right">
            <ul class="breadcrumb">
                <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home mr-3"></i>@ViewData["Root"]</a></li>
                <li><a href="#">@ViewData["Modulo"]</a></li>
                <li class="active">@ViewData["Option"]</li>
            </ul>
        </section>
        <!-- ./breadcrumb -->

        <section>
            <div class="row">
                <div class="col-sm-12">
                    <div class="well loading-well">

                        <fieldset>
                            <legend>@ViewData["TableName"]</legend>

                            <div class="form-horizontal">

                                <hr />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UsuarioDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.UsuarioDesc,null, new { htmlAttributes = new { @class = "form-control", @maxlength = "40", @placeholder = "NuevoUsuario" , @autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.UsuarioDesc, "", new { @class = "text-danger", @id = "valMessageUsuario" })
                                    </div>

                                    @Html.LabelFor(model => model.CorreoE, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.CorreoE, new { htmlAttributes = new { @class = "form-control", @maxlength = "60", @placeholder = "nuevousuario@sadena.com.mx" } })
                                        @Html.ValidationMessageFor(model => model.CorreoE, "", new { @class = "text-danger", @id = "valMessageCorreo" })
                                    </div>

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.RolDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(model => model.RolId, new SelectList(Model.RolesLista, "RolId", "RolDesc"), new { id = "RolesLista", @class = "selectRol show-tick form-control" })
                                        @Html.ValidationMessageFor(model => model.RolId, "", new { @class = "text", @id = "valMessageRol" })
                                    </div>

                                    @Html.LabelFor(model => model.Contrasenia, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.Contrasenia, new { htmlAttributes = new { @class = "form-control", @maxlength = "40", @placeholder = "NuevoUsuario123", @type = "password" } })
                                        <span toggle="#Contrasenia" class="fa fa-fw fa-eye field-icon toggle-password" title="mostrar/ocultar"></span>
                                        
                                        @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger", @id = "valMessageContrasenia" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input id="BotonCrearUsuario" type="submit" value="Crear" class="btn btn-primary" />
                                    </div>
                                </div>

                            </div><!--fin del form horizontal-->

                            <a id="redirectConsultarUsuarios" href="#">Ir a Consulta Usuarios</a>
                        </fieldset>
                    </div>
                </div>
            </div>

        </section>
    </div>
    <!-- ./container -->
</div>
<!-- ./page content -->
