<!-- Imports -->
@model Sadena.Models.Usuarios.Usuario

<!-- Scope -->
@{
    ViewData["Title"] = "Inicio de Sesión";
}

<!-- Page content -->
<div class="page-content">

    <!-- Container -->
    <div class="container">

        <!-- Login -->
        <section>
            <div class="row">
                <div class="col-sm-12">
                    <div class="login-panel-container">
                        <!-- Panel -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <span class="simple-icon pull-right"><i class="fa fa-user-circle-o"></i></span>
                                <h3 class="panel-title">@ViewData["Title"]</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <!-- Form -->
                                        <form class="form-horizontal" asp-area="" asp-fragment="Usuarios" asp-controller="Acceso" asp-action="Login">
                                            <fieldset>
                                                <legend>Credenciales</legend>
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CorreoE, new { @class = "col-sm-2 control-label" })
                                                    <div class="col-sm-10">
                                                        @Html.TextBoxFor(model => model.CorreoE, new { @class = "form-control", @placeholder = "example@sadena.gob.mx" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Contrasenia, new { @class = "col-sm-2 control-label" })
                                                    <div class="col-sm-10">
                                                        @Html.PasswordFor(model => model.Contrasenia, new { @class = "form-control", @placeholder = "Contraseña" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-10 col-sm-offset-2">
                                                        <a class="btn btn-default" asp-area="" asp-controller="Home" asp-action="Index">Regresar</a>
                                                        <button type="submit" class="btn btn-primary">Entrar</button>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </form>
                                        <!-- ./form -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- .panel -->

                    </div>
                </div>
            </div>
        </section>
        <!-- ./login -->

    </div>
    <!-- ./container -->

</div>
<!-- ./page content -->
