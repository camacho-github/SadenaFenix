@* Model *@
@model SadenaFenix.Transport.Nacimientos.Archivos.ImportarArchivosViewModel

@{

    ViewData["Root"] = "Sadena";
    ViewData["Modulo"] = "Nacimientos";
    ViewData["Option"] = "Importar";
    ViewData["Title"] = ViewData["Modulo"] + " / " + ViewData["Option"];

}

<!-- Page content -->
<div class="page-content">

    @Html.HiddenFor(model => model.Usuario.Json, new { id = "objUsuario", name= "Usuario.Json" })

    <!-- Container -->
    <div class="container">

        <!-- Breadcrumb -->
        <section class="pull-right">
            <ul class="breadcrumb">
                <li><a href="/Home/Index"><i class="fa fa-home mr-3"></i>@ViewData["Root"]</a></li>
                <li><a href="#">@ViewData["Modulo"]</a></li>
                <li class="active">@ViewData["Option"]</li>
            </ul>
        </section>
        <!-- ./breadcrumb -->
        <!-- Loading files -->
        <section>
            <div class="row">
                <div class="col-sm-12">
                    <div class="well loading-well">
                        <!-- Form -->
                        <form id="loadingFilesForm" class="form-horizontal" action="/Archivos/Importar" method="post" enctype="multipart/form-data" >
                            <fieldset>
                                <legend>Selección de Archivos</legend>
                                <div class="form-group">
                                    <label class="col-sm-12" for="sinacFile">SINAC</label>
                                    <div class="col-sm-12">
                                        <input id="SinacFile" name="SinacFile" type="file" accept="*.mdb" class="form-control-file" placeholder="Selección de archivo..." title="Campo para seleccionar archivo SINAC">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12" for="sicFile">SIC</label>
                                    <div class="col-sm-12">
                                        <input id="SicFile" name="SicFile" type="file" accept="*.xls, *.xlsx" class="form-control-file" placeholder="Selección de archivo..." title="Campo para seleccionar archivo SIC">
                                    </div>
                                </div><br />
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button id="loadingFilesBtn" type="submit" class="btn btn-success" title="Cargar Archivos">Cargar Archivos</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <!-- ./form -->
                    </div>
                </div>
            </div>
        </section>
        <!-- ./loading files -->

    </div>
    <!-- ./container -->

</div>
<!-- ./page content -->

@section Scripts
{
    <script src="~/Scripts/js/nacimientos/consultas/importar.js"></script>
}