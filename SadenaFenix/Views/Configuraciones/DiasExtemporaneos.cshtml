@model SadenaFenix.Views.Nacimientos.Configuraciones.Parametros

@{
    Layout = "~/Views/Shared/_GeoLayout.cshtml";
}


@section Scripts
{
    <script src="@Url.Content("~/Scripts/js/nacimientos/configuraciones/diasExtemporaneos.js")"></script>
}

<!-- Modal large -->
<div id="largeModal" class="modal fade in" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p class="modal-text">One fine body…</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button id="largeModalAcceptBtn" type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal large -->
<div id="DialogoModal" class="modal fade in" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <p class="modal-text">One fine body…</p>
            </div>
            <div class="modal-footer">
                <button id="largeModalAcceptBtn" type="button" class="btn btn-primary" data-dismiss="modal">Continuar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal alert -->
<div id="alertModal" class="modal fade in" role="dialog">
    <div class="modal-dialog">
        <div class="alert alert-dismissible">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Modal title</h4><hr />
            <p class="modal-text">One fine body…</p>
        </div>
    </div>
</div>

<input type="hidden" name="objUsuario" id="objUsuario" value="@ViewBag.UserJson" />

<input type="hidden" name="perfilInvalido" id="perfilInvalido" value="@ViewBag.perfilInvalido" />

<div id="modalConsulta">
    <div class="modalBackground"></div>
    <div id="mightyPopUp" class="multiModal">
        <div class="mightyPopContent generalModalSize">
            <div class="modalTitle">
                <div class="icon_title s-icon-adjust"><img src="~/Content/images/btnPeriod.png" alt="" /></div>
                <div class="tdTitle">Configuración de días extemporáneos</div>
            </div>
            <section>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="well">
                            <form class="form-horizontal">
                                <fieldset>

                                    @Html.LabelFor(model => model.NoDiasExtemporaneos, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.NoDiasExtemporaneos, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                                        @Html.ValidationMessageFor(model => model.NoDiasExtemporaneos, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group perfilInvalido" style="padding-bottom:10px;">
                                        <div class="btn-group">
                                            <button id="actualizarConfigDiasExtBtn" type="button" class="btn btn-success"
                                                    title="Actualizar configuración">
                                                Actualizar <i class="fa"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="row perfilInvalido">
                                        <div class="col-sm-12">
                                            <p class="note-feet"><strong>* La actualización de éste valor afectará el resultado a las consultas del subregistro.</strong></p>
                                        </div>
                                    </div>

                                    <!-- /.form-group -->
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>


